
<div class="row">
  <div class="devise-form">

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>

      <h2>Subscribe</h2>

      <p>*All fields are required except Address Line 2</p>

      <br><h5>Creating your account</h5><br>
      <div class="form-inputs">

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>

      <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control', data: { payola: 'email' }  %>
      </div>

      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

    <br> <h5>Where and to whom should we send the magazine?</h5> <br>

      <div class="form-group">
        <%= f.label :addressee %>
        <%= f.text_field :addressee %>
      </div>

      <div class="form-group">
        <%= f.label :address_line_1 %>
        <%= f.text_field :address_line_1 %>
      </div>

      <div class="form-group">
        <%= f.label :address_line_2 %>
        <%= f.text_field :address_line_2 %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class="form-group">
        <%= f.label :state %>
        <%= f.select(:state, us_states) %>
      </div>

      <div class="form-group">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
      </div>

      <div class="form-group">
        <%= f.label :country %>
        <%= f.country_select(:country, priority_countries: ["US", "CA", "MX"]) %>
      </div>

      <br>
      <script src="https://checkout.stripe.com/v2/checkout.js"
      class="stripe-button"
      data-label="Pay for Subscription"
      data-key="<%= Rails.application.secrets.stripe_publishable_key %>"
      data-description="<%= Rails.application.secrets.product_title %>"
      data-amount="<%= Rails.application.secrets.product_price %>">
     </script>

      <br/>
      <% end %>

      <br/>
      <%= render "devise/shared/links" %>

    </div> <!-- end div class form inputs -->
  </div>
</div>



